<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7D6C7"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/ph_dash_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1000"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#004A33"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/weather_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="64dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_corner_green"
            app:srcCompat="@drawable/partially_cloudy" />

        <ImageButton
            android:id="@+id/fitness_goals_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_corner_gold"
            app:srcCompat="@drawable/person_running" />

        <ImageButton
            android:id="@+id/settings_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="64dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/rounded_corner_green"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/ic_menu_manage" />
    </LinearLayout>

</LinearLayout>