<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7D6C7"
    android:orientation="vertical">

    <TextView
        android:id="@+id/modPounds_static"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:background="#FCCCCA"
        android:text="How many pounds would you like to"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/modPounds_dynamic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="lose/gain"
        android:background="#FCCCCA"/>

    <TextView
        android:id="@+id/this_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="this week?"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:background="#FCCCCA"/>

    <EditText
        android:id="@+id/modPounds_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:backgroundTint="#BD8E36"
        android:text="Submit" />

</LinearLayout>